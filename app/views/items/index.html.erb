<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Your Items</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <%= simple_form_for(@item, html: { class: 'form-inline' }) do |f| %>
        <%= f.input :title %>
        <%= f.submit "Create", class: "btn btn-primary" %>
      <% end %>

    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <ul>
        <% @items.each do |item| %>
          <li><%= item.title %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
